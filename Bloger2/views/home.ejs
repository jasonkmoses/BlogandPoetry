<%- include("header");-%>
<link href="https://fonts.googleapis.com/css2?family=Italiana&display=swap" rel="stylesheet">
            <h2 class="alligning home-screen" style="margin-top:81px; margin-bottom:81px; font-family: 'Italiana', serif; font-style: italic;">Home & Blog</h2>
            <section class="carousels" style="box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.25)!important; width:90%;">
              <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/carousel-1.jpeg" alt="First slide"  >
                    <div class="carousel-caption">
                   <h3 class="carouselsText" style="color:black;">Dreaming of you is my great escape.</h3>
                   <h6 class="carouselsText" style="font-family: 'Italiana', serif; color:black;">-Perry Poerty</h6>
                 </div>
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/images/carousel-2.jpeg" href="#carouselExampleIndicators"  alt="Second slide">
                    <div class="carousel-caption">
                   <h3 class="carouselsText">A poor poem has no trumpet.</h3>
                   <h6 class="carouselsText" style="font-family: 'Italiana', serif;">-Michael McClintock</h6>
                 </div>
                  </div>
                  <div class="carousel-item">
                     <img class="d-block w-100" src="/images/carousel-3.jpeg" href="#carouselExampleIndicators"  alt="Third slide">
                     <div class="carousel-caption">
                   <h3 class="carouselsText" style="color:black;">Poetry heals the wounds inflicted by reason.</h3>
                   <h6 class="carouselsText" style="font-family: 'Italiana', serif; color:black;">-Novalls</h6>
                 </div>
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </section>
              <p style="margin-top:120px;" id="typingText3"></p>
              <% if (isAdminLogIn == true || isUserLoggedIn == true) { %>
              <section class ="composing" style="margin-top:120px;">
                <form  action="/" method="post">
                  <div class="form-group alligning">
                    <div class="alligning">
                    </div>
                    <label style="padding: 2%; margin-top:40px; font-size:120%;"><h3 style="margin-bottom:15%; margin-right:40px;">Comment</h3><i class="fas fa-comments" style="margin-top:10px; font-size: 55px;"></i></label>
                    <div>
                    <textarea class="form-control comment" name="commentBody" rows="5" cols="30" style="margin-top:20px;width:90%;display:inline-block;"  placeholder="Place your comment in here you want to be posted in here"></textarea>
                    </div>
                  </div>
                  <div style="text-align:center; margin-bottom:50px;">
                  <a style="text-align:center;"><button class="btn btn-dark"  type="submit" name="clickMe" style="margin-top:40px;">Comment</button></a>
                  </div>
                </form>
              </section>
<% } %>
<div style="position:relative;text-align:center;">
<img class="image blackBorder" src="/images/commentsImg.jpeg" alt="" style="margin-bottom:85px; margin-top:125px; box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.25)!important; width: 90%; border-color:white;">
 <h3 class="carouselsText centered" style="color:white;font-family: 'Italiana', serif; font-size:140%;">Comments</h3>
 <p class="carouselsText centered" style="color:white;margin-top:55px;font-size:90%;">Sign in and post your comments below.</p>
</div>
   <% if (isAdminLogIn == false && isUserLoggedIn == false) { %>
     <div style="width:70%; border:1px solid black; display:inline-block; margin-top:30px; margin-bottom:5%;" id="loginAlert">
     <p style=" font-size:20px">Please Login to post comments this is to ensure no unwanted users post malicious comments</p>
     <a href="/auth"><button type="button" class="btn btn-outline-dark" name="button">Sign In</button></a>
     <a><button type="button" class="btn btn-outline-dark" name="button" onclick="RemoveAnimation(); setTimeout(Remove, 1300)">Cancel</button></a><br><br><br></div>
   <% } %>
   <br>
   <br>
   <br>
   <div class="commentAlign">
     <hr>
     <h2 class="commentSectionText" style="font-family: 'Italiana', serif;">Comment Section</h2>
     <hr>
   <% comments.forEach(function (comment) { %>
     <div  style="text-align:center; margin-bottom:55px;">
       <h3 class="philosopher" style="margin-bottom:6%; margin-right:40px; font-weight:bold; font-size:30px;"><%= comment.title %></h3>
       <br>
       <img class="img-fluid" src="<%= comment.imageSource %>" alt="" style="margin-bottom:31px; border:2px solid black; border-radius:50%; width:100px;">
       <div>
       <br>
       <h6 style="margin-top: 0; font-weight:lighter;"><%= comment.content %></h6>
      </div>
     </div>
    <hr>
   <% }); %>
  </div>
<script type="text/javascript">
var loginAlert = document.getElementById('loginAlert');
function RemoveAnimation() { loginAlert.classList.add('opac'); }
function Remove() { loginAlert.style.display = "none"; }
var i = 0;
var speed = 60;
var txt = "Welcome to the home page this is where you can view poems read comments and view copyright disclaimers and what engine we use to power our content. Social media platforms are also located at the bottom if your intersted in following my accounts.Contact details are found on the contact page also to create a comment.";
var text = document.getElementById("typingText3");
function typeWriter() {
      if (i < txt.length) {
      text.innerHTML += txt.charAt(i);
      i++;
      setTimeout(typeWriter, speed); }}
      typeWriter();
</script>
<%- include("footer"); -%>
